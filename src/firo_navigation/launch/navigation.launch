<launch>
    <!-- <node name="rviz" pkg="rviz" type="rviz"
                args="-d $(find firo_navigation)/rviz/nav.rviz"/> -->

    <node pkg="mbf_costmap_nav" type="mbf_costmap_nav" respawn="false" name="move_base" output="screen">
        <!-- <remap from="move_base_simple/goal" to="simple_goal_relay/goal"/> -->
        <rosparam file="$(find firo_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find firo_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find firo_navigation)/config/local_costmap.yaml" command="load"  ns="local_costmap" />
        <rosparam file="$(find firo_navigation)/config/global_costmap.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find firo_navigation)/config/base_local_planner.yaml" command="load" />
        <rosparam file="$(find firo_navigation)/config/move_base.yaml" command="load" />
    </node>
    
    <node pkg="firo_navigation" type="simple_goal_relay.py" name="simple_goal_relay"/>
</launch>